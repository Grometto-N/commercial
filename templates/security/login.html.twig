                <h2 >Connexion</h2>
            </div>
            {# EMAIL #}
            <div class="col-md-12 py-3 my-2">
                <label for="inputEmail4" class="form-label">Email</label>
                <input type="email" class="form-control" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
            </div>
            {# PASSWORD #}
            <div class="col-md-12 py-3 my-2">
                <label for="inputPassword4" class="form-label">Password</label>
                <input type="password" class="form-control" id="inputPassword4" name="password" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
            {# BOUTON #}
            <div class="col-md-12 mt-2 pt-3">
                <button type="submit" class="btn btn-primary">
                    Connexion
                </button>
            </div>
